<%
  document = @document
  pdf_doc = Prawn::Document.new(:page_size => "A4") do
    font "Helvetica"
    font_size 12
    text document.title, :size => 24

    move_cursor_to(font.height)
    text "Summary:", :align => :center
    text document.short_summary

    move_cursor_to(font.height)
    text "Teaser:", :align => :center
    text document.teaser

    move_cursor_to(font.height)
    text "Complete copy:", :align => :center
    text document.story

    move_cursor_to(font.height)
    text "Locations:", :align => :center
    text document.locations

    move_cursor_to(font.height)
    text "People:", :align => :center
    text document.people

    move_cursor_to(font.height)
    text "Companies:", :align => :center
    text document.companies

    move_cursor_to(font.height)
    text "Keyword:", :align => :center
    text document.keywords

    move_cursor_to(font.height)
    text "Language:", :align => :center
    text document.language.name
    move_cursor_to(font.height*3)
    text "Created on #{document.created_on.strftime("%a, %m/%d/%Y %H:%M:%S")}"
    move_cursor_to(font.height*3)
    text 'Generated by <a href="http://startbudding.com/">Budding</a>', :size => 8
  end
  pdf_doc.render
%>